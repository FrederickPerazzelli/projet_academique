<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="55dp"
    android:background="@color/mainColor"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".NewDemandActivity">

    <TextView
        android:id="@+id/TitleNewDemand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="@string/nouvelle_demande"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />

    <TextView
        android:id="@+id/editTitleNewDemand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/titre"
        android:textSize="32sp"/>


    <EditText
        android:id="@+id/sendTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input"
        android:ems="10"
        android:textSize="24sp"
        android:inputType="textMultiLine"/>

    <TextView
        android:id="@+id/TitleSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/sujet"
        android:textSize="32sp"/>

    <EditText
        android:id="@+id/sendSubject"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/TitleCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/categorie"
        android:textSize="16sp"/>

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="@drawable/input"
        android:ems="10" />


    <TextView
        android:id="@+id/TitleQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/question"
        android:textSize="32sp"/>

    <EditText
        android:id="@+id/sendQuestion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/sendDemand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/button"
        android:text="@string/envoyer"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>